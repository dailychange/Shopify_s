/* Product Grid */
.product-grid {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr)); /* Adjust columns as needed */
  gap: 20px; /* Adjust the gap between items */
}

/* Product Item */
.product-item {
  background-color: #fff;
  border: 1px solid #ddd;
  padding: 20px;
  text-align: center;
  transition: transform 0.3s ease;
}

.product-item:hover {
  transform: translateY(-5px);
}

.product-item img {
  max-width: 100%;
  height: auto;
}

.product-item h3 {
  margin-top: 10px;
  font-size: 18px;
  color: #333;
}

.product-item p {
  font-size: 16px;
  color: #666;
}

.product-item a {
  text-decoration: none;
  color: inherit;
}

.product-item a:hover {
  text-decoration: underline;
}
 

/* Single Product Page */
.single-product {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  display: flex;
}

.product-image-container {
  flex: 1; /* Take one-third of available space */
  margin-right: 20px;
}

.product-image {
  width: 300px; /* Set your desired width */
  height: 400px; /* Set your desired height */
  object-fit: cover; /* Maintain aspect ratio and cover the container */
  border-radius: 5px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Add shadow */
}


.product-details {
  flex: 2; /* Take two-thirds of available space */
}

.product-title {
  font-size: 24px;
  margin-bottom: 10px;
  color: #333;
}

.product-price {
  font-size: 18px;
  color: #666;
}

.product-description {
  margin-top: 20px;
  font-size: 16px;
  color: #555;
}

.product-variant-select {
  margin-top: 20px;
  padding: 10px;
  font-size: 16px;
  color: #333;
  border: 1px solid #ddd;
  border-radius: 5px;
  background-color: #f9f9f9;
}

.add-to-cart-btn {
  margin-top: 20px;
  padding: 10px 20px;
  font-size: 16px;
  color: #fff;
  background-color: #007bff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.add-to-cart-btn:hover {
  background-color: #0056b3;
}

/* Cart Page */
.cart-container {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.cart-container h1 {
  font-size: 24px;
  margin-bottom: 20px;
}

.cart-item {
  margin-bottom: 20px;
  display: flex;
  align-items: center; /* Center align items vertically */
}

.cart-item img {
  max-width: 100px;
  height: auto;
  margin-right: 20px; /* Space between image and text */
  border-radius: 5px;
}

.cart-item-details {
  flex: 1; /* Allow details to take up remaining space */
}

.cart-item-details h2 {
  font-size: 18px;
  margin-bottom: 5px;
}

.cart-item-details p {
  margin-bottom: 5px;
}

.cart-item-details input[type="number"] {
  width: 60px;
  padding: 5px;
}

.cart-item-details a {
  color: #007bff;
  text-decoration: none;
  margin-left: 10px;
}

.cart-total {
  margin-top: 20px;
}

.cart-total p {
  font-weight: bold;
}

.cart-buttons {
  margin-top: 20px;
}

.cart-buttons button {
  padding: 10px 20px;
  font-size: 16px;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.cart-buttons button[name="update"] {
  background-color: #007bff;
}

.cart-buttons button[name="checkout"] {
  background-color: #28a745;
  margin-left: 10px;
}

.cart-buttons button:hover {
  background-color: #0056b3;
}
 
